{
  "name": "chrome-extension-ts-starter",
  "version": "1.0.0",
  "description": "Chrome Extension starter built with TypeScript and Parcel",
  "main": "index.js",
  "scripts": {
    "build:bg": "parcel build src/background/index.ts -d dist/background --no-minify --no-content-hash",
    "build:content": "parcel build src/content/index.ts -d dist/content --no-minify --no-content-hash",
    "build:options": "parcel build src/options/index.html -d dist/options --public-url ./",
    "build:popup": "parcel build src/popup/index.html -d dist/popup --no-minify --public-url ./",
    "build:devtools": "parcel build src/devtools/index.html -d dist/devtools --public-url ./",
    "build:devtools:app": "parcel build src/devtools/app/index.html -d dist/devtools/app --public-url ./",
    "build": "npm run popup-sass && npm run content-sass && npm run build:bg --no-minify && npm run build:content --no-minify && npm run build:options --no-minify && npm run build:popup --no-minify && npm run build:devtools --no-minify && npm run build:devtools:app",
    "clean": "rimraf dist",
    "copy:static": "copyfiles manifest.json assets/**/* dist",
    "copy:vendor": "copyfiles -u 1 src/vendor/**/* dist",
    "copy:content-css": "copyfiles -f src/content/styles.css src/content/styles.css.map dist/content",
    "dist": "npm run clean && npm run build --no-minify && npm run copy:static && npm run content-sass && npm run copy:content-css && npm run copy:vendor",
    "lint": "eslint --ext .ts,.tsx ./src",
    "test": "jest -c ./config/jest.config.js",
    "popup-sass": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 ./src/popup/popup-styles.scss ./src/popup/popup-styles.css",
    "content-sass": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 ./src/content/styles.scss ./src/content/styles.css"
  },
  "author": "Yuri Drabik <yurist38@mail.ru>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/chrome": "^0.0.114",
    "@types/jest": "^25.2.3",
    "@types/jquery": "^3.5.8",
    "@types/node": "^14.0.5",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "@vue/component-compiler-utils": "^3.1.2",
    "babel-jest": "^26.0.1",
    "clean-css-cli": "^5.4.2",
    "copyfiles": "^2.2.0",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^26.0.1",
    "jest-chrome": "^0.7.0",
    "node-sass": "^6.0.1",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.3",
    "csvtojson": "^2.0.10",
    "jquery": "^3.6.0",
    "moment": "^2.29.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0",
    "tldts": "^5.7.50",
    "vue": "^2.6.11"
  }
}
